<h1>Listing inspections</h1>

<table>
  <thead>
    <tr>
      <th>Targetyearmonth</th>
      <th>Equipment</th>
      <th>Status</th>
      <th>Worker</th>
      <th>Ressult</th>
      <th>Processingdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
        <td><%= inspection.targetyearmonth %></td>
        <td><%= inspection.equipment.name %></td>
        <td><%= inspection.status.name %></td>
        <td><%= inspection.worker.name %></td>
        <td><%= inspection.result.name %></td>
        <td><%= inspection.processingdate %></td>
        <td><%= link_to 'Show', inspection %></td>
        <td><%= link_to 'Edit', edit_inspection_path(inspection) %></td>
        <td><%= link_to 'Destroy', inspection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

