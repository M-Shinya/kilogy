<h1><%= t('views.record.index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.record.worker_id') %></th>
      <th><%= t('activerecord.attributes.record.latitude') %></th>
      <th><%= t('activerecord.attributes.record.longitude') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.worker.name %></td>
        <td><%= record.latitude %></td>
        <td><%= record.longitude %></td>
        <td><%= link_to t('views.link_to.show'), record %></td>
        <td><%= link_to t('views.link_to.edit'), edit_record_path(record) %></td>
        <td><%= link_to t('views.link_to.destroy'), record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.link_to.new'), new_record_path %>
